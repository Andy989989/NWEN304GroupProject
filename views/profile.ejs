<html>
    <head>
        <% include partials/header %>
    </head>
        <body>
        <% include partials/navbar %>
        <div class="row">
            <div class="col-sm-5 col-sm-offset-1">
                <h1><%= user.name %>'s Kart</h1>
            </div>
            <div class="col-sm-5">
                <input type="button" class="btn pull-right" onclick="location.href='/delete_entire_kart';" value="Purchase Kart" />
            </div>
        </div>

        <% if(results.length < 1){ %>
            NOTHING HERE
        <% }else if(results.length > 1){%>
            <div class="row flex-row">
                <% results.forEach(function(item) { %>
                    <% var jsonItem = JSON.parse(item)%>
                    <% include partials/item_card %>
                <% }); %>
            </div>
        <% }else{ %>
            <% profile = true %>
            <% jsonItem = JSON.parse(results[0])%>
            <% include partials/single_item_card %>
        <% } %>
    </body>
</html>

